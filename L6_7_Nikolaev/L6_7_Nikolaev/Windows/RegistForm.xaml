<Window x:Class="L6_7_Nikolaev.RegistForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L6_7_Nikolaev"
        mc:Ignorable="d"
        Title="Авторизация" Height="149" Width="261"
        Style="{StaticResource base_windows_3}"  >
    <Grid Margin="10" Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите пароль"/>
        <TextBox x:Name="passwordBox" Grid.Row="1" MinWidth="230" Text="12345" Margin="0,0,0,36" Grid.RowSpan="2"/>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="Accept" Click="Accept_Click" Content="Ок" IsDefault="True" MinWidth="60" Margin="0,0,10,0"/>
            <Button Content="Отмена" IsCancel="True" MinWidth="60" Margin="0,0,10,0"/>
        </WrapPanel>
    </Grid>
</Window>
